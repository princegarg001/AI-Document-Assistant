# Use a Python slim base image
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy local files
COPY . .

# Install system dependencies (Tesseract, Poppler for PDF rendering)
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    libtesseract-dev \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    flask \
    flask-cors \
    PyMuPDF \
    google-generativeai \
    pytesseract \
    python-dotenv \
    langchain \
    langchain-community \
    langchain-google-genai \
    langchain-experimental \
    Pillow

# Expose the port your Flask app runs on
EXPOSE 8000

# Default CMD
CMD ["python", "app.py"]
